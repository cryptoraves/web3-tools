{
  "name": "web3-tools",
  "version": "1.0.0",
  "description": "fundamental tools for interacting in web3",
  "author": "cartosys",
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "solhint": "solhint src/**/*.sol",
    "compile": "specron compile",
    "sandbox": "specron sandbox",
    "prepare": "specron compile",
    "test": "specron test"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "test": {
      "match": [
        "./src/**/*.test.*"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "3box": "^1.17.1",
    "@specron/cli": "latest",
    "@specron/flattener": "latest",
    "@specron/spec": "latest",
    "@types/node": "13.7.0",
    "assemblyscript": "^0.10.0",
    "ethers": "^4.0.46",
    "nuxt": "^2.12.1",
    "solc": "^0.6.10",
    "solhint": "2.3.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5",
    "web3": "^1.2.6"
  }
}
